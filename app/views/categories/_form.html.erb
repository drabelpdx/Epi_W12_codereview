<%= render "layouts/errors", :object => @category%>

<%= form_for @category do |f| %>
  <div class="field">
    <%= f.text_field :name %><br>
    <%= f.label :name %>
  </div>
  <div class="field">
    <%= f.text_field :description %><br>
    <%= f.label :description %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
